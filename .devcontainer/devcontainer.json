{
  "name": "BUDG",
  "dockerComposeFile": [ "docker-compose.yml" ],
  "service": "dev",
  "workspaceFolder": "/workspace/budg",
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack"
      ],
      "settings": {
        "java.jdt.ls.java.home": "/usr/lib/jvm/jdk-24.0.2",             // Match your Dockerfile path
        "java.configuration.runtimes": [
            {
              "name": "JavaSE-24",
              "path": "/usr/lib/jvm/jdk-24.0.2",
              "default": true
            }
        ]
      }
    }
  },
  "postCreateCommand": "mvn clean install || true",
  "remoteUser": "root"
}
